<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shoplex.bible.biblelock">

    <uses-permission android:name = "android.permission.DISABLE_KEYGUARD"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/qq"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".TextCommentActivity"></activity>
        <activity android:name=".ImageCommentActivity"></activity>

        <activity android:name=".LockScreenActivity"
            android:launchMode="singleInstance"
            android:excludeFromRecents="true"
            android:taskAffinity="com.example.suoping.lockscreen"></activity>

        <service android:name=".server.ServiceActivity"/>
    </application>


</manifest>